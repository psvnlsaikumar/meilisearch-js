{
  // extend your base config so you don't have to redefine your compilerOptions
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "module": "esnext",
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "examples/**/*.js",
    "scripts/**/*.js",
    "jest.config.js",
    "rollup.config.js",
    ".eslintrc.js",
    "playgrounds/**/*.js",
    "playgrounds/**/*.ts"
  ]
}
